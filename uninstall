#!/bin/bash

# o11-v3 Uninstaller
# Script by: 3BdALLaH

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}"
echo "================================================"
echo "         o11-v3p Uninstaller"
echo "           Script by: 3BdALLaH"
echo "================================================"
echo -e "${NC}"

SERVICE_NAME="o11.service"
INSTALL_DIR="/home/o11"

if [ "$EUID" -ne 0 ]; then
    echo -e "${RED}Please run as root or use sudo${NC}"
    exit 1
fi

# Check if running in a terminal
if [ -t 0 ]; then
    read -p "Are you sure you want to uninstall o11-v3p? (y/N): " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo "Uninstall cancelled."
        exit 0
    fi
else
    echo "Running in non-interactive mode. Uninstall will proceed in 3 seconds..."
    sleep 3
fi

echo "Stopping and disabling service..."
systemctl stop "$SERVICE_NAME" 2>/dev/null || true
systemctl disable "$SERVICE_NAME" 2>/dev/null || true

echo "Removing systemd service..."
rm -f "/etc/systemd/system/$SERVICE_NAME" 2>/dev/null || true
systemctl daemon-reload

echo "Cleaning up installation directory..."
rm -rf "$INSTALL_DIR" 2>/dev/null || true

echo -e "${GREEN}"
echo "================================================"
echo "       o11-v3 successfully uninstalled"
echo "           Script by: 3BdALLaH"
echo "================================================"
echo -e "${NC}"
